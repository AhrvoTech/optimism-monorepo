{
  "name": "@pigi/wrapped-solc-example",
  "version": "0.0.10-alpha.0",
  "description": "Example of using solc-transpiler in place of solc-js",
  "scripts": {
    "clean": "rimraf build",
    "test:waffle": "mkdir -p build/waffle && waffle waffle-config.json",
    "test:truffle": "export EXECUTION_MANAGER_ADDRESS=\"0x0000000000000000000000000000000000000000\" && truffle compile",
    "test": "yarn test:waffle && yarn test:truffle",
    "all": "yarn clean && yarn test"
  },
  "keywords": [
    "optimism",
    "rollup",
    "optimistic",
    "ethereum",
    "client"
  ],
  "homepage": "https://github.com/op-optimism/optimistic-rollup/tree/master/packages/wrapped-solc-example#readme",
  "license": "MIT",
  "author": "Optimism PBC",
  "repository": {
    "type": "git",
    "url": "https://github.com/op-optimism/optimistic-rollup.git"
  },
  "dependencies": {
    "@pigi/solc-transpiler": "0.0.10-alpha.0",
    "ethereum-waffle": "^2.0.12",
    "rimraf": "^2.6.3",
    "truffle": "^5.1.12"
  },
  "publishConfig": {
    "access": "public"
  }
}
